{
  "name": "node-starter",
  "private": true,
  "engines": {
    "node": "18"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npm run services:up && tsx watch src/index.ts",
    "services:up": "docker compose -f  compose.yaml up -d",
    "services:stop": "docker compose -f compose.yaml stop",
    "services:down": "docker compose -f compose.yaml down",
    "build": "tsup src",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "migration:create": "node-pg-migrate --migrations-dir src/infrastructure/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations  up"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.11.11",
    "dotenv": "^16.4.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.2.6",
    "tsup": "^8.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
